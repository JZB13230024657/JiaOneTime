<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/duanzi_touxiang"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:orientation="vertical">
                <TextView
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:id="@+id/duanzi_name"/>
                <TextView
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:id="@+id/duanzi_time"/>
            </LinearLayout>
        </LinearLayout>
        <com.getbase.floatingactionbutton.FloatingActionsMenu
            android:id="@+id/tuijianremen_xuanfukuang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_expandDirection="left"
            app:fab_addButtonSize="mini"
            android:layout_alignParentRight="true">

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:layout_width="5dp"
                android:layout_height="5dp"
                app:fab_size="mini"
                android:src="@mipmap/pingbi"
                />
            <com.getbase.floatingactionbutton.FloatingActionButton
                android:layout_width="5dp"
                android:layout_height="5dp"
                app:fab_size="mini"
                android:src="@mipmap/lianjie"
                />
            <com.getbase.floatingactionbutton.FloatingActionButton
                android:layout_width="5dp"
                android:layout_height="5dp"
                app:fab_size="mini"
                android:src="@mipmap/jubao"
                />
        </com.getbase.floatingactionbutton.FloatingActionsMenu>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/duanzi_show"/>

</LinearLayout>
